{
  "apps": [
    {
      "name": "backend",
      "script": "./dist/index.js",
      "watch": "./dist",
      "source_map_support": true,
      "watch_options": {
        "usePolling": true
      },
      "exec_mode": "fork",
      "instance_var": "INSTANCE_ID",
      "env": {
        "NODE_ENV": "development",
        "NODE_CONFIG_DIR": "./config"
      },
      "node_args": [
        "--inspect=0.0.0.0:9229"
      ]
    }
  ]
}
